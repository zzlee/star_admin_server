
form#mainform(action='')

    table#product-table(border='0', width='100%', cellpadding='0', cellspacing='0')
        tr
          th.table-header-repeat.line-left.minwidth-1(width='10')
            a(href='') 主題類別
          th.table-header-repeat.line-left.minwidth-1(width='10')
            a(href='') 影片編號
          th.table-header-repeat.line-left.minwidth-1(width='500')
            a(href='') 長條圖
          th.table-header-repeat.line-left.minwidth-1(width='500')
            a(href='') 實拍圖
          th.table-header-repeat.line-left.minwidth-1(width='10')
            a(href='') 已刊登次數
          th.table-header-repeat.line-left.minwidth-1(width='10')
            a(href='') 審核結果
          th.table-header-repeat.line-left.minwidth-1(width='10')
            a(href='') 精彩刊登

        if(highlightList)
            each ugcCensor, i in highlightList
                if i%2
                    tr
                      td 
                         if(ugcCensor.contentGenre == 'miix_it')
                             label.label_video 合成影片
                         if(ugcCensor.contentGenre == 'cultural_and_creative')
                             label.label_design 文創
                         if(ugcCensor.contentGenre == 'mood')
                             label.label_mood 心情
                         if(ugcCensor.contentGenre == 'check_in')
                             label.label_checkin 打卡
                      td #{ugcCensor.ugcCensorNo}
                      if(ugcCensor.contentGenre == 'miix_it')
                         td
                             img(src='#{ugcCensor.fbPictureUrl}', alt='', width='120')
                             label       
                             img(src='#{ugcCensor.userPhotoUrl}', alt='', width='360')
                             br
                             label #{ugcCensor.fb_userName} 
                      else
                         td 
                             img(src='#{ugcCensor.url.s3}', alt='', width='500', height='149')
                      if(ugcCensor.contentGenre == 'miix_it')
                         td
                             video(src='https://s3.amazonaws.com/miix_content/'+'#{ugcCensor.liveContentUrl}', alt='', width='370', height='210', controls)
                      else
                         td
                             img(src='#{ugcCensor.liveContentUrl}', alt='', width='320')
                      td #{ugcCensor.doohPlayedTimes}
                      td #{ugcCensor.rating}
                      td 
                        if(ugcCensor.highlight == true)					  
                          input#ugcCensor.ugcCensorNoHL(type='checkbox', value='#{ugcCensor.highlight}', name='#{ugcCensor.ugcCensorNo}', checked)
                        else
                          input#ugcCensor.ugcCensorNoHL(type='checkbox', value='#{ugcCensor.highlight}', name='#{ugcCensor.ugcCensorNo}')


                else
                    tr.alternate-row
                      td
                         if(ugcCensor.contentGenre == 'miix_it')
                             label.label_video 合成影片
                         if(ugcCensor.contentGenre == 'cultural_and_creative')
                             label.label_design 文創
                         if(ugcCensor.contentGenre == 'mood')
                             label.label_mood 心情
                         if(ugcCensor.contentGenre == 'check_in')
                             label.label_checkin 打卡
                      td #{ugcCensor.ugcCensorNo}
                      if(ugcCensor.contentGenre == 'miix_it')
